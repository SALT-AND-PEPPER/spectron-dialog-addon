{
  "compilerOptions": {
    "module": "commonjs",
    "lib": ["es6"],
    "target": "es5",
    "sourceMap": true,
    "declaration": true,
    "removeComments": true,
    "importHelpers": true,
    "baseUrl": ".",
    "strictNullChecks": true,
    "skipLibCheck": true,
    "outDir": "dist"
  },
  "include": ["./src/**/*.ts"],
  "exclude": ["node_modules", "./test/**/*"]
}
